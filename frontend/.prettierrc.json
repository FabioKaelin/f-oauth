{
    "singleQuote": false,
    "printWidth": 200,
    "proseWrap": "always",
    "tabWidth": 4,
    "useTabs": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "semi": false,
    "endOfLine": "lf",
    "bracketSameLine": true,
    "arrowParens": "avoid",
    "singleAttributePerLine": false,
    "vueIndentScriptAndStyle": false,
    "embeddedLanguageFormatting": "auto",
    "overrides": [
        {
            "files": "*.yaml",
            "options": {
                "parser": "yaml",
                "tabWidth": 2
            }
        }
    ]
}
